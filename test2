    <script>
        // Three.js setup
        const scene = new THREE.Scene();
        scene.background = new THREE.Color(0xf8f8f8);
        scene.fog = new THREE.Fog(0xf8f8f8, 100, 300);

        const camera = new THREE.PerspectiveCamera(
            75,
            window.innerWidth / window.innerHeight,
            0.1,
            1000
        );
        camera.position.set(50, 40, 60);
        camera.lookAt(0, 20, 0);

        const renderer = new THREE.WebGLRenderer({ antialias: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.shadowMap.enabled = true;
        renderer.shadowMap.type = THREE.PCFSoftShadowMap;
        document.getElementById('canvas-container').appendChild(renderer.domElement);

        // Lighting
        const ambientLight = new THREE.AmbientLight(0xffffff, 0.7);
        scene.add(ambientLight);

        const directionalLight = new THREE.DirectionalLight(0xffffff, 0.8);
        directionalLight.position.set(50, 100, 50);
        directionalLight.castShadow = true;
        scene.add(directionalLight);

        // Ground plane
        const groundGeometry = new THREE.PlaneGeometry(100, 100);
        const groundMaterial = new THREE.MeshPhongMaterial({ 
            color: 0xe0e0e0,
            side: THREE.DoubleSide
        });
        const ground = new THREE.Mesh(groundGeometry, groundMaterial);
        ground.rotation.x = -Math.PI / 2;
        ground.position.y = 0;
        ground.receiveShadow = true;
        scene.add(ground);

        // Parameters object - Updated for v4.0
        const parameters = {
            initialParticles: 20,
            simulationSpeed: 1.0,
            trtForce: 0.015,
            trtAcceleration: 1.0,
            tippingPoint: 0.7,
            praForce: 0.02,
            praDiversity: 1.0,
            // Multi-gravity source parameters - Updated for v4.0
            centralConvergence: 0.03,      // Central strategic control
            clusterConvergence: 0.02,      // Within-cluster cohesion
            clusterInertia: 0.015,         // NEW: Cluster inertia effect (higher = more resistance to leaving)
            marketPull: 0.02,              // NEW: Direct market attraction force
            clusterPermeability: 0.8,      // NEW: Cluster boundary permeability (0=closed, 1=open)
            peerAttraction: 0.01,          // Peer-to-peer attraction
            attractionRange: 5,            // Attraction effect radius
            clusterThreshold: 3,           // Minimum particles to form cluster
            successThreshold: 38,
            timeScale: 0.1,
            spawnInterval: 0.5,
            batchSize: 3,
            heterogeneity: 0.5,
            lifespanVariance: 0.3,
            // Vertex Capacity Parameters - Re-implemented
            vertexCapacity: 5,             // Maximum resources near vertex
            capacityRadius: 2,             // Radius from vertex where capacity limit applies
            congestionEffect: 0.8,         // Velocity reduction factor when congested
            queueingBehavior: 'priority',  // 'priority', 'random', 'pushback'
            // Environmental Bias Parameters - NEW
            coneTiltX: 0,                  // Cone tilt in X direction (-30 to 30 degrees)
            coneTiltZ: 0,                  // Cone tilt in Z direction (-30 to 30 degrees)
            asymmetryX: 1.0,               // Cross-section asymmetry X axis (0.5 to 2.0)
            asymmetryZ: 1.0,               // Cross-section asymmetry Z axis (0.5 to 2.0)
            // Path Memory Parameters - NEW
            pathMemoryEnabled: true,       // Enable path reinforcement
            pathMemoryStrength: 0.02,      // Strength of path attraction
            pathMemoryPersistence: 0.005,  // Memory persistence (0=no memory, 1=perfect memory)
            pathMemoryResolution: 20       // Grid resolution for path memory
        };

        // Simulation state
        const simulationState = {
            isRunning: false,
            isPaused: false,
            elapsedTime: 0,
            lastSpawnTime: 0,
            totalSpawned: 0,
            successCount: 0,
            periodStats: {
                fiveYear: { spawned: 0, success: 0 },
                tenYear: { spawned: 0, success: 0 }
            },
            mode: 'single', // 'single' or 'comparison'
            clusters: [],   // NEW: Active clusters
            gravitySources: [] // NEW: Multiple gravity sources
        };

        // Comparison mode data
        const comparisonData = {
            scenarios: [],
            results: []
        };

        // Visibility toggles
        const visibility = {
            cone: true,
            sections: true,
            spiral: true,
            success: true,
            trails: false,
            clusters: true,    // NEW
            gravity: false,    // NEW
            pathMemory: false  // NEW
        };

        // Main groups
        const coneGroup = new THREE.Group();
        const sectionsGroup = new THREE.Group();
        const spiralGroup = new THREE.Group();
        const particlesGroup = new THREE.Group();
        const successGroup = new THREE.Group();
        const trailsGroup = new THREE.Group();
        const clustersGroup = new THREE.Group();
        const gravityGroup = new THREE.Group();
        const pathMemoryGroup = new THREE.Group();
        
        scene.add(coneGroup, sectionsGroup, spiralGroup, particlesGroup, successGroup, trailsGroup, clustersGroup, gravityGroup, pathMemoryGroup);

        // Cone parameters
        const coneHeight = 40;
        const coneRadius = 20;

        // Particle types enum
        const ParticleType = {
            STANDARD: 'standard',
            EXPLORER: 'explorer',
            EXPLOITER: 'exploiter'
        };
        
        class PathMemory {
            constructor(resolution = 20) {
                this.resolution = resolution;
                this.grid = Array.from({ length: resolution }, () => 
                           Array.from({ length: resolution }, () => 
                           Array(resolution).fill(0)));
                this.maxValue = 0;
            }
            worldToGrid(position) {
                const x = Math.floor((position.x / coneRadius + 1) * 0.5 * this.resolution);
                const y = Math.floor(position.y / coneHeight * this.resolution);
                const z = Math.floor((position.z / coneRadius + 1) * 0.5 * this.resolution);
                return {
                    x: Math.max(0, Math.min(this.resolution - 1, x)),
                    y: Math.max极(0, Math.min(this.resolution - 1, y)),
                    z: Math.max(0, Math.min(this.resolution - 1, z))
                };
            }
            addMemory(position, strength = 1.0) {
                const coords = this.worldToGrid(position);
                for (let dx = -2; dx <= 2; dx++) {
                    for (let dy = -2; dy <= 2; dy++) {
                        for (let dz = -2; dz <= 2; dz++) {
                            const x = coords.x + dx;
                            const y = coords.y + dy;
                            const z = coords.z + dz;
                            if (x >= 0 && x < this.resolution && y >= 0 && y < this.resolution && z >= 0 && z < this.resolution) {
                                const distance = Math.sqrt(dx*dx + dy*dy + dz*dz);
                                const falloff = Math.exp(-distance * 0.5);
                                this.grid[x][y][z] += strength * falloff;
                                this.maxValue = Math.max(this.maxValue, this.grid[x][y][z]);
                            }
                        }
                    }
                }
            }
            getMemoryAt(position) {
                const coords = this.worldToGrid(position);
                return this.grid[coords.x][coords.y][coords.z] / (this.maxValue + 0.01);
            }
            decay(factor) {
                for (let x = 0; x < this.resolution; x++) {
                    for (let y = 0; y < this.resolution; y++) {
                        for (let z = 0; z < this.resolution; z++) {
                            this.grid[x][y][z] *= factor;
                        }
                    }
                }
                this.maxValue *= factor;
            }
        }
        
        const pathMemory = new PathMemory(parameters.pathMemoryResolution);
        
        class Cluster {
            constructor(id, center, members) {
                this.id = id;
                this.center = center.clone();
                this.members = new Set(members);
                this.color = new THREE.Color(Math.random(), Math.random(), Math.random());
                this.strength = 1.0;
                this.age = 0;
                this.createVisual();
            }
            createVisual() {
                const geometry = new THREE.SphereGeometry(1, 16, 16);
                const material = new THREE.MeshBasicMaterial({ color: this.color, transparent: true, opacity: 0.3 });
                this.mesh = new THREE.Mesh(geometry, material);
                this.mesh.position.copy(this.center);
                clustersGroup.add(this.mesh);
                
                const ringGeometry = new THREE.RingGeometry(parameters.attractionRange - 0.5, parameters.attractionRange, 32);
                const ringMaterial = new THREE.MeshBasicMaterial({ color: this.color, transparent: true, opacity: 0.2, side: THREE.DoubleSide });
                this.ring = new THREE.Mesh(ringGeometry, ringMaterial);
                this.ring.rotation.x = -Math.PI / 2;
                this.ring.position.copy(this.center);
                clustersGroup.add(this.ring);
            }
            update(particles) {
                if (this.members.size > 0) {
                    const memberParticles = particles.filter(p => this.members.has(p.id));
                    if (memberParticles.length > 0) {
                        this.center.set(0, 0, 0);
                        memberParticles.forEach(p => { this.center.add(p.position); });
                        this.center.divideScalar(memberParticles.length);
                        this.mesh.position.copy(this.center);
                        this.ring.position.copy(this.center);
                        this.strength = Math.min(2.0, 0.5 + this.members.size * 0.1);
                        this.mesh.scale.setScalar(this.strength);
                    }
                }
                this.age++;
            }
            remove() {
                clustersGroup.remove(this.mesh);
                clustersGroup.remove(this.ring);
            }
        }

        function createCone() {
            while(coneGroup.children.length > 0) coneGroup.remove(coneGroup.children[0]);
            coneGroup.rotation.x = parameters.cone极TiltX * Math.PI / 180;
            coneGroup.rotation.z = parameters.coneTiltZ * Math.PI / 180;
            const coneGeometry = new THREE.ConeGeometry(coneRadius, coneHeight, 32, 1, true);
            const positions = coneGeometry.attributes.position;
            for (let i = 0; i < positions.count; i++) {
                positions.setX(i, positions.getX(i) * parameters.asymmetryX);
                positions.setZ(i, positions.getZ(i) * parameters.asymmetryZ);
            }
            positions.needsUpdate = true;
            coneGeometry.computeVertexNormals();
            const coneMaterial = new THREE.MeshPhongMaterial({ color: 0x3b82f6, transparent: true, opacity: 0.15, side: THREE.DoubleSide });
            const cone = new THREE.Mesh(coneGeometry, coneMaterial);
            cone.position.y = coneHeight / 2;
            coneGroup.add(cone);
            const wireframeGeometry = new THREE.ConeGeometry(coneRadius, coneHeight, 16, 8, true);
            const wirePositions = wireframeGeometry.attributes.position;
            for (let i = 0; i < wirePositions.count; i++) {
                wirePositions.setX(i, wirePositions.getX(i) * parameters.asymmetryX);
                wirePositions.setZ(i, wirePositions.getZ(i) * parameters.asymmetryZ);
            }
            wirePositions.needsUpdate = true;
            const wireframeMaterial = new THREE.MeshBasicMaterial({ color: 0x2563eb, wireframe: true, transparent: true, opacity: 0.3 });
            const wireframe = new THREE.Mesh(wireframeGeometry, wireframeMaterial);
            wireframe.position.y = coneHeight / 2;
            coneGroup.add(wireframe);
        }

        function createSections() {
            while(sectionsGroup.children.length > 0) sectionsGroup.remove(sectionsGroup.children[0]);
            sectionsGroup.rotation.x = parameters.coneTiltX * Math.PI / 180;
            sectionsGroup.rotation.z = parameters.coneTiltZ * Math.PI / 180;
            const heights = [5, 15, 25, 35];
            const colors = [0x8b5cf6, 0xef4444, 0xf97316, 0x10b981];
            heights.forEach((height, index) => {
                const radius = coneRadius * (1 - height / coneHeight);
                const curve = new THREE.EllipseCurve(0, 0, radius * parameters.asymmetryX, radius * parameters.asymmetryZ, 0, 2 * Math.PI, false, 0);
                const points = curve.getPoints(50);
                const geometry = new THREE.BufferGeometry().setFromPoints(points);
                const material = new THREE.LineBasicMaterial({ color: colors[index], transparent: true, opacity: 0.5 });
                const ellipse = new THREE.Line(geometry, material);
                ellipse.rotation.x = -Math.PI / 2;
                ellipse.position.y = height;
                sectionsGroup.add(ellipse);
            });
            const successHeight = parameters.successThreshold;
            const successRadius = coneRadius * (1 - successHeight / coneHeight);
            const successCurve = new THREE.EllipseCurve(0, 0, successRadius * parameters.asymmetryX, successRadius * parameters.asymmetryZ, 0, 2 * Math.PI, false, 0);
            const successPoints = successCurve.getPoints(50);
            const successGeometry = new THREE.BufferGeometry().setFromPoints(successPoints);
            const successMaterial = new THREE.LineBasicMaterial({ color: 0xfbbf24, transparent: true, opacity: 0.8, linewidth: 3 });
            const successLine = new THREE.Line(successGeometry, successMaterial);
            successLine.rotation.x = -Math.PI / 2;
            successLine.position.y = successHeight;
            sectionsGroup.add(successLine);
        }

        function createSpiral() {
            while(spiralGroup.children.length > 0) spiralGroup.remove(spiralGroup.children[0]);
            const points = [];
            for (let i = 0; i <= 300; i++) {
                const t = i / 300;
                const height = t * coneHeight;
                const maxRadius = coneRadius * (1 - t) * 0.9;
                const angle = t * Math.PI * 8;
                points.push(new THREE.Vector3(Math.cos(angle) * maxRadius, height, Math.sin(angle) * maxRadius));
            }
            const geometry = new THREE.BufferGeometry().setFromPoints(points);
            const material = new THREE.LineBasicMaterial({ color: 0x6366f1, transparent: true, opacity: 0.8, linewidth: 3 });
            spiralGroup.add(new THREE.Line(geometry, material));
        }

        const industryProfiles = {
            biotech: { baseSuccessRate: 0.02, congestionEffect: 0.95, attritionRate: 0.05, recycleValue: 0.9, capacityConstraint: false, description: "超低成功率・規制ゲート・高知識価値" },
            software: { baseSuccessRate: 0.3, congestionEffect: 0.6, attritionRate: 0.01, recycleValue: 0.5, capacityConstraint: true, description: "高成功率・市場渋滞・迅速な再利用" },
            consumer: { baseSuccessRate: 0.2, congestionEffect: 0.7, attritionRate: 0.02, recycleValue: 0.6, capacityConstraint: true, description: "中成功率・棚競争・ブランド転用可" },
            hybrid: { baseSuccessRate: 0.15, congestionEffect: 0.75, attritionRate: 0.02, recycleValue: 0.7, capacityConstraint: true, description: "バランス型・多様な制約" }
        };
        function getCurrentIndustryProfile() {
            return industryProfiles[parameters.industryProfile] || industryProfiles.hybrid;
        }

        class SpatialGrid {
            constructor(size, divisions) {
                this.size = size;
                this.divisions = divisions;
                this.cellSize = size / divisions;
                this.grid = {};
            }
            getKey(x, y, z) {
                return `${Math.floor((x + this.size/2) / this.cellSize)},${Math.floor(y / this.cellSize)},${Math.floor((z + this.size/2) / this.cellSize)}`;
            }
            clear() { this.grid = {}; }
            insert(particle) {
                const key = this.getKey(particle.position.x, particle.position.y, particle.position.z);
                if (!this.grid[key]) this.grid[key] = [];
                this.grid[key].push(particle);
            }
            getNearbyParticles(position, radius) {
                const nearby = [];
                const cellRadius = Math.ceil(radius / this.cellSize);
                const centerX = Math.floor((position.x + this.size/2) / this.cellSize);
                const centerY = Math.floor(position.y / this.cellSize);
                const centerZ = Math.floor((position.z + this.size/2) / this.cellSize);
                for (let dx = -cellRadius; dx <= cellRadius; dx++) {
                    for (let dy = -cellRadius; dy <= cellRadius; dy++) {
                        for (let dz = -cellRadius; dz <= cellRadius; dz++) {
                            const key = `${centerX + dx},${centerY + dy},${centerZ + dz}`;
                            if (this.grid[key]) {
                                this.grid[key].forEach(p => {
                                    if (position.distanceTo(p.position) <= radius) nearby.push(p);
                                });
                            }
                        }
                    }
                }
                return nearby;
            }
        }
        const spatialGrid = new SpatialGrid(coneRadius * 2, 10);
        function findClusters(particles) {
            const clusters = [];
            const visited = new Set();
            spatialGrid.clear();
            particles.forEach(p => spatialGrid.insert(p));
            particles.forEach(p => {
                if (visited.has(p.id)) return;
                visited.add(p.id);
                const neighbors = spatialGrid.getNearbyParticles(p.position, parameters.attractionRange).filter(o => o.id !== p.id);
                if (neighbors.length >= parameters.clusterThreshold - 1) {
                    const cluster = new Set([p.id]);
                    const stack = [...neighbors];
                    while (stack.length > 0) {
                        const current = stack.pop();
                        if (visited.has(current.id)) continue;
                        visited.add(current.id);
                        cluster.add(current.id);
                        const currentNeighbors = spatialGrid.getNearbyParticles(current.position, parameters.attractionRange).filter(o => o.id !== current.id);
                        if (currentNeighbors.length >= parameters.clusterThreshold - 1) {
                            currentNeighbors.forEach(n => { if (!visited.has(n.id)) stack.push(n); });
                        }
                    }
                    if (cluster.size >= parameters.clusterThreshold) {
                        const center = new THREE.Vector3(0,0,0);
                        const clusterParticles = particles.filter(p => cluster.has(p.id));
                        clusterParticles.forEach(p => center.add(p.position));
                        center.divideScalar(clusterParticles.length);
                        clusters.push({ members: Array.from(cluster), center: center });
                    }
                }
            });
            return clusters;
        }

        function updateClusters(particles) {
            const newClusters = findClusters(particles.filter(p => p.isActive));
            simulationState.clusters.forEach(c => c.remove());
            simulationState.clusters = [];
            newClusters.forEach((clusterData, index) => {
                const cluster = new Cluster(`c_${Date.now()}_${index}`, clusterData.center, clusterData.members);
                simulationState.clusters.push(cluster);
            });
            updateClusterPanel();
        }

        function updateClusterPanel() {
            const list = document.getElementById('cluster-list');
            list.innerHTML = '';
            simulationState.clusters.forEach((c, i) => {
                const item = document.createElement('div');
                item.className = 'cluster-item';
                item.innerHTML = `
                    <div style="display: flex; align-items: center;">
                        <div class="cluster-color" style="background: #${c.color.getHexString()};"></div>
                        <span>クラスター ${i + 1}</span>
                    </div>
                    <span>${c.members.size} 資源</span>`;
                list.appendChild(item);
            });
            document.getElementById('cluster-vis').style.display = simulationState.clusters.length > 0 ? 'block' : 'none';
        }

        class ResourceParticle {
            constructor(id, spawnTime = 0) {
                this.id = id;
                this.spawnTime = spawnTime;
                this.age = 0;
                this.clusterId = null;
                this.generation = 0;
                this.inheritedKnowledge = 0;
                
                const typeRandom = Math.random();
                if (parameters.heterogeneity > 0) {
                    if (typeRandom < parameters.heterogeneity * 0.3) this.type = ParticleType.EXPLORER;
                    else if (typeRandom < parameters.heterogeneity * 0.6) this.type = ParticleType.EXPLOITER;
                    else this.type = ParticleType.STANDARD;
                } else {
                    this.type = ParticleType.STANDARD;
                }
                
                this.setAttributesByType();
                
                const angle = Math.random() * Math.PI * 2;
                const radius = Math.random() * coneRadius * 0.8;
                this.position = new THREE.Vector3(Math.cos(angle) * radius, 0.5, Math.sin(angle) * radius);
                this.velocity = new THREE.Vector3((Math.random() - 0.5) * 0.05, Math.random() * 0.02 + 0.01, (Math.random() - 0.5) * 0.05);
                
                this.createMesh();
                this.trail = [];
                this.maxTrailLength = 50;
                this.isActive = true;
                this.hasSucceeded = false;
                this.maxAge = 100 * (1 + (Math.random() - 0.5) * parameters.lifespanVariance);
                
                if (this.inheritedKnowledge > 0) {
                    this.velocity.y *= (1 + this.inheritedKnowledge * 0.1);
                    this.trtAffinity *= (1 + this.inheritedKnowledge * 0.05);
                }
            }
            
            setAttributesByType() {
                switch(this.type) {
                    case ParticleType.EXPLORER:
                        this.trtAffinity = 0.7; this.praAffinity = 1.3; this.size = 0.35;
                        break;
                    case ParticleType.EXPLOITER:
                        this.trtAffinity = 1.3; this.praAffinity = 0.7; this.size = 0.4;
                        break;
                    default: // STANDARD
                        this.trtAffinity = 1.0; this.praAffinity = 1.0; this.size = 0.3;
                }
            }
            
            createMesh() {
                let geometry;
                switch(this.type) {
                    case ParticleType.EXPLORER: geometry = new THREE.ConeGeometry(this.size, this.size * 2, 4); geometry.rotateZ(Math.PI); break;
                    case ParticleType.EXPLOITER: geometry = new THREE.BoxGeometry(this.size * 1.5, this.size * 1.5, this.size * 1.5); break;
                    default: geometry = new THREE.SphereGeometry(this.size, 16, 16);
                }
                const material = new THREE.MeshPhongMaterial({ color: this.getColorByHeight(), transparent: true, opacity: 0.9, emissive: this.getColorByHeight(), emissiveIntensity: 0.3 });
                this.mesh = new THREE.Mesh(geometry, material);
                this.mesh.position.copy(this.position);
                this.mesh.castShadow = true;
                particlesGroup.add(this.mesh);
            }
            
            getColorByHeight() {
                const height = this.position.y;
                if (height < 10) return 0x8b5cf6;
                if (height < 20) return 0xef4444;
                if (height < 30) return 0xf97316;
                return 0x10b981;
            }
            
            update(deltaTime, particles, params) {
                if (!this.isActive) return;
                
                this.age += deltaTime * params.timeScale;
                const industryProfile = getCurrentIndustryProfile();
                if ((this.age > this.maxAge && this.position.y < params.successThreshold * 0.8) || (Math.random() < industryProfile.attritionRate * deltaTime)) {
                    this.die('attrition');
                    return;
                }
                
                const heightRatio = this.position.y / coneHeight;
                const nearVertexThreshold = params.successThreshold - params.capacityRadius;
                if (this.position.y >= nearVertexThreshold && !this.hasSucceeded) {
                    const nearVertexParticles = particles.filter(p => p.isActive && p.position.y >= nearVertexThreshold && !p.hasSucceeded);
                    if (nearVertexParticles.length > params.vertexCapacity) {
                        this.velocity.y *= params.congestionEffect;
                        this.isQueued = true;
                    } else {
                        this.isQueued = false;
                    }
                }
                
                const trtStrength = params.trtForce * (1 - heightRatio) * params.trtAcceleration * this.trtAffinity;
                this.velocity.y += (heightRatio < params.tippingPoint) ? trtStrength * deltaTime : trtStrength * deltaTime * 1.5;
                
                const praStrength = params.praForce * (1 - heightRatio) * params.praDiversity * this.praAffinity;
                this.velocity.x += (Math.random() - 0.5) * praStrength * deltaTime;
                this.velocity.z += (Math.random() - 0.5) * praStrength * deltaTime;
                
                const toCenter = new THREE.Vector3(-this.position.x, 0, -this.position.z).normalize();
                this.velocity.x += toCenter.x * params.centralConvergence * heightRatio * deltaTime;
                this.velocity.z += toCenter.z * params.centralConvergence * heightRatio * deltaTime;
                
                const myCluster = simulationState.clusters.find(c => c.members.has(this.id));
                if (myCluster) {
                    const toClusterCenter = new THREE.Vector3().subVectors(myCluster.center, this.position).setY(0).normalize();
                    const clusterForce = params.clusterConvergence * myCluster.strength;
                    this.velocity.x += toClusterCenter.x * clusterForce * deltaTime;
                    this.velocity.z += toClusterCenter.z * clusterForce * deltaTime;
                }
                
                const nearbyParticles = spatialGrid.getNearbyParticles(this.position, params.attractionRange);
                nearbyParticles.forEach(other => {
                    if (other.id === this.id || !other.isActive) return;
                    const distance = this.position.distanceTo(other.position);
                    if (distance > 0.5) {
                        const attractionForce = new THREE.Vector3().subVectors(other.position, this.position).normalize().multiplyScalar(params.peerAttraction / (distance * distance));
                        this.velocity.add(attractionForce.multiplyScalar(deltaTime));
                    }
                });
                
                if (params.pathMemoryEnabled && pathMemory.getMemoryAt(this.position) > 0) {
                     const gradientStep = 0.5;
                     const memoryGradient = new THREE.Vector3(
                         (pathMemory.getMemoryAt(new THREE.Vector3(this.position.x + gradientStep, this.position.y, this.position.z)) - pathMemory.getMemoryAt(new THREE.Vector3(this.position.x - gradientStep, this.position.y, this.position.z))) / (2 * gradientStep),
                         (pathMemory.getMemoryAt(new THREE.Vector3(this.position.x, this.position.y + gradientStep, this.position.z)) - pathMemory.getMemoryAt(new THREE.Vector3(this.position.x, this.position.y - gradientStep, this.position.z))) / (2 * gradientStep),
                         (pathMemory.getMemoryAt(new THREE.Vector3(this.position.x, this.position.y, this.position.z + gradientStep)) - pathMemory.getMemoryAt(new THREE.Vector3(this.position.x, this.position.y, this.position.z - gradientStep))) / (2 * gradientStep)
                     );
                     this.velocity.add(memoryGradient.multiplyScalar(params.pathMemoryStrength * deltaTime));
                }
                
                this.position.add(this.velocity.clone().multiplyScalar(deltaTime * params.simulationSpeed));
                if (visibility.trails) this.trail.push(this.position.clone());
                
                const tiltMatrix = new THREE.Matrix4().makeRotationFromEuler(new THREE.Euler(-params.coneTiltX * Math.PI / 180, 0, -params.coneTiltZ * Math.PI / 180));
                const localPos = this.position.clone().applyMatrix4(tiltMatrix);
                let effectiveX = localPos.x / params.asymmetryX;
                let effectiveZ = localPos.z / params.asymmetryZ;
                let currentRadius = Math.sqrt(effectiveX ** 2 + effectiveZ ** 2);
                const maxRadiusAtCurrentHeight = coneRadius * (1 - localPos.y / coneHeight);
                if (currentRadius > max极RadiusAtCurrentHeight) {
                    const scale = maxRadiusAtCurrentHeight / currentRadius * 0.95;
                    localPos.x = effectiveX * scale * params.asymmetryX;
                    localPos.z = effectiveZ * scale * params.asymmetryZ;
                    this.position.copy(localPos.applyMatrix4(tiltMatrix.clone().invert()));
                    const normal = new THREE.Vector3(effectiveX, 0, effectiveZ).normalize();
                    this.velocity.sub(normal.multiplyScalar(2 * this.velocity.dot(normal))).multiplyScalar(0.5);
                }
                
                if (this.position.y >= params.successThreshold && !this.hasSucceeded) {
                    const vertexOccupants = particles.filter(p => p.hasSucceeded || (p.isActive && p.position.y >= params.successThreshold));
                    const successProbability = industryProfile.baseSuccessRate + (this.inheritedKnowledge * 0.05) + (this.generation * 0.02);
                    if (vertexOccupants.length < params.vertexCapacity && Math.random() < successProbability) {
                        this.succeed();
                    } else if (industryProfile.capacityConstraint && vertexOccupants.length >= params.vertexCapacity) {
                        this.die('congestion');
                    }
                }
                
                this.mesh.position.copy(this.position);
                this.mesh.material.color.setHex(myCluster ? new THREE.Color(this.getColorByHeight()).lerp(myCluster.color, 0.3).getHex() : this.getColorByHeight());
                this.mesh.material.emissive.setHex(this.getColorByHeight());
                this.mesh.material.opacity = (this.isQueued ? 0.6 : 1) * 0.9 * (1 - (this.age / this.maxAge) * 0.3);
                this.velocity.multiplyScalar(0.98);
            }
            
            succeed() {
                this.hasSucceeded = true;
                simulationState.successCount++;
                if (parameters.pathMemoryEnabled) {
                    this.trail.forEach((pos, i) => pathMemory.addMemory(pos, (i / this.trail.length) * 0.5 + 0.5));
                    pathMemory.addMemory(this.position, 2.0);
                }
                this.remove();
            }
            
            die(reason = 'natural') {
                if (!this.isActive) return;
                this.isActive = false;
                if (parameters.knowledgeTransferRate > 0) this.transferKnowledge();
                this.createMisfireEffect();
            }
            
            recycle() {
                this.position.set(Math.cos(Math.random() * 2 * Math.PI) * coneRadius * 0.7, Math.random() * 10 + 5, Math.sin(Math.random() * 2 * Math.PI) * coneRadius * 0.7);
                this.velocity.set((Math.random() - 0.5) * 0.03, Math.random() * 0.02 + 0.015, (Math.random() - 0.5) * 0.03);
                this.generation++;
                this.inheritedKnowledge += 0.2;
                this.trtAffinity *= 1.1;
                this.maxAge *= 1.2;
                this.age = 0;
                this.isActive = true;
                this.hasSucceeded = false;
            }
            
            transferKnowledge() {
                const nearby = spatialGrid.getNearbyParticles(this.position, parameters.attractionRange * 2);
                const knowledgePerParticle = this.inheritedKnowledge / Math.max(1, nearby.length);
                nearby.forEach(other => {
                    if (other.isActive && other.id !== this.id) {
                        other.inheritedKnowledge += knowledgePerParticle * parameters.knowledgeTransferRate;
                    }
                });
            }
            
            createMisfireEffect() {
                this.velocity.y *= 0.3;
                this.velocity.x *= 0.5;
                this.velocity.z *= 0.5;
                const animateFlight = () => {
                    if (this.mesh.material.opacity > 0.1) {
                        this.velocity.y -= 0.002;
                        this.position.add(this.velocity.clone().multiplyScalar(0.1));
                        this.mesh.position.copy(this.position);
                        this.mesh.material.opacity *= 0.98;
                        requestAnimationFrame(animateFlight);
                    } else {
                        this.remove();
                    }
                };
                animateFlight();
            }
            
            remove() {
                this.isActive = false;
                particlesGroup.remove(this.mesh);
            }
        }

        let particles = [];
        let nextParticleId = 0;
        
        function spawnParticles(count) {
            for (let i = 0; i < count; i++) {
                particles.push(new ResourceParticle(nextParticleId++, simulationState.elapsedTime));
                simulationState.totalSpawned++;
            }
        }
        
        function createInitialParticles() {
            particles.forEach(p => p.remove());
            particles = [];
            nextParticleId = 0;
            if (simulationState.mode === 'single' && parameters.initialParticles > 0) {
                spawnParticles(parameters.initialParticles);
            }
        }

        createCone();
        createSections();
        createSpiral();
        createInitialParticles();

        function setMode(mode, button) {
            simulationState.mode = mode;
            document.querySelectorAll('.mode-button').forEach(btn => btn.classList.remove('active'));
            if (button) button.classList.add('active');
            document.getElementById('comparison-panel').classList.toggle('active', mode === 'comparison');
            resetSimulation();
        }

        document.querySelectorAll('input[type="range"], select, input[type="checkbox"]').forEach(input => {
            input.addEventListener('input', function() {
                const param = this.id;
                const value = this.type === 'checkbox' ? this.checked : (this.type === 'range' ? parseFloat(this.value) : this.value);
                parameters[param] = value;
                const valueElem = document.getElementById(`${param}-value`);
                if(valueElem) {
                    if (this.type === 'checkbox') valueElem.textContent = value ? '有効' : '無効';
                    else if (typeof value === 'number' && !Number.isInteger(value)) valueElem.textContent = value.toFixed(3);
                    else valueElem.textContent = value;
                }
                if (['successThreshold', 'coneTiltX', 'coneTiltZ', 'asymmetryX', 'asymmetryZ'].includes(param)) {
                    createSections();
                    createCone();
                }
            });
        });

        function togglePanel() {
            const panel = document.getElementById('control-panel');
            panel.classList.toggle('collapsed');
            document.querySelector('.collapse-button').textContent = panel.classList.contains('collapsed') ? '▲' : '▼';
        }

        function toggleElement(element) {
            visibility[element] = !visibility[element];
            const groups = { cone: coneGroup, sections: sectionsGroup, spiral: spiralGroup, success: successGroup, trails: trailsGroup, clusters: clustersGroup, gravity: gravityGroup, pathMemory: pathMemoryGroup };
            if(groups[element]) groups[element].visible = visibility[element];
            document.getElementById(`toggle${element.charAt(0).toUpperCase() + element.slice(1)}`).classList.toggle('active', visibility[element]);
        }

        function loadPreset(preset, button) {
            const presets = {
                centralized: { trtForce: 0.015, praForce: 0.015, centralConvergence: 0.05, clusterConvergence: 0.01, peerAttraction: 0.005, heterogeneity: 0.3 },
                distributed: { trtForce: 0.012, praForce: 0.025, centralConvergence: 0.015, clusterConvergence: 0.04, peerAttraction: 0.02, heterogeneity: 0.7 },
                hybrid: { trtForce: 0.015, praForce: 0.02, centralConvergence: 0.03, clusterConvergence: 0.02, peerAttraction: 0.01, heterogeneity: 0.5 },
                emergent: { trtForce: 0.010, praForce: 0.03, centralConvergence: 0.01, clusterConvergence: 0.05, peerAttraction: 0.025, heterogeneity: 0.9 }
            };
            const selectedPreset = presets[preset] || presets.hybrid;
            Object.keys(selectedPreset).forEach(key => {
                const input = document.getElementById(key);
                if (input) {
                    parameters[key] = selectedPreset[key];
                    input.value = selectedPreset[key];
                    const valueElem = document.getElementById(`${key}-value`);
                    if(valueElem) valueElem.textContent = selectedPreset[key].toFixed(3);
                }
            });
            document.querySelectorAll('.preset-button').forEach(btn => btn.classList.remove('active'));
            if (button) button.classList.add('active');
            
            // Trigger input event to update everything
            Object.keys(selectedPreset).forEach(key => {
                const input = document.getElementById(key);
                if (input) input.dispatchEvent(new Event('input'));
            });
        }

        function startSimulation() {
            simulationState.isRunning = true;
            simulationState.isPaused = false;
        }
        
        function pauseSimulation() {
            simulationState.isPaused = !simulationState.isPaused;
        }
        
        function resetSimulation() {
            simulationState.isRunning = false;
            simulationState.isPaused = false;
            simulationState.elapsedTime = 0;
            simulationState.totalSpawned = 0;
            simulationState.successCount = 0;
            simulationState.lastSpawnTime = 0;
            
            simulationState.clusters.forEach(c => c.remove());
            simulationState.clusters = [];
            
            particles.forEach(p => p.remove());
            particles = [];
            nextParticleId = 0;
            
            createInitialParticles();
            updateStats();
        }

        function updateStats() {
            const active = particles.filter(p => p.isActive);
            document.getElementById('active-particles').textContent = active.length;
            document.getElementById('total-spawned').textContent = simulationState.totalSpawned;
            document.getElementById('success-count').textContent = simulationState.successCount;
            document.getElementById('success-rate').textContent = `${(simulationState.totalSpawned > 0 ? (simulationState.successCount / simulationState.totalSpawned) * 100 : 0).toFixed(1)}%`;
            document.getElementById('sim-time').textContent = `${simulationState.elapsedTime.toFixed(1)}年`;
            
            const avgTrt = active.length > 0 ? active.reduce((sum, p) => sum + p.position.y / coneHeight, 0) / active.length : 0;
            document.getElementById('avg-trt').textContent = avgTrt.toFixed(3);

            const queuedParticles = particles.filter(p => p.isQueued).length;
            document.getElementById('queued-particles').textContent = queuedParticles;
        }
        
        const clock = new THREE.Clock();
        function animate() {
            requestAnimationFrame(animate);
            const deltaTime = clock.getDelta();
            
            if (simulationState.isRunning && !simulationState.isPaused) {
                simulationState.elapsedTime += deltaTime * parameters.timeScale;
                
                if (simulationState.elapsedTime - simulationState.lastSpawnTime >= parameters.spawnInterval) {
                    spawnParticles(parameters.batchSize);
                    simulationState.lastSpawnTime = simulationState.elapsedTime;
                }
                
                particles.forEach(p => p.update(deltaTime, particles, parameters));
                particles = particles.filter(p => p.isActive);
                
                updateClusters(particles);
                simulationState.clusters.forEach(c => c.update(particles));
                
                if (parameters.pathMemoryEnabled) pathMemory.decay(1 - parameters.pathMemoryPersistence * deltaTime);
                
                updateStats();
            }
            
            renderer.render(scene, camera);
        }
        
        animate();
        
        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        }, false);

        // Initial setup to sync UI with default parameters
        Object.keys(parameters).forEach(key => {
            const input = document.getElementById(key);
            if(input) {
                input.value = parameters[key];
                if (input.type === 'checkbox') input.checked = parameters[key];
                input.dispatchEvent(new Event('input'));
            }
        });
        loadPreset('hybrid');

    </script>
</body>
</html>
